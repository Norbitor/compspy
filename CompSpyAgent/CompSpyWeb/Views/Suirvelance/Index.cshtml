@model IEnumerable<CompSpyWeb.ViewModels.ClassroomViewModel>
@{
    ViewBag.Title = "Rozpocznij monitoring";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    @foreach (var m in Model)
    {
        <div class="col-md-4">
            <h3>@m.Name</h3>
            <p>
                Lokalizacja: @m.Location<br />
                Liczba komputerów: @m.ComputersCount<br />
                Aktywne komputery: @m.ActiveComputers
            </p>
            @Html.ActionLink("Monitoruj", "ShowRoom", "Suirvelance", new { id = @m.ID }, new { @class = "btn btn-primary"})
        </div>
    }
</div>

