@if (Session["UserID"] != null)
{
    using (Html.BeginForm("Logoff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <nav class="nav navbar-nav navbar-right">
            <div class="container-fluid">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <span class="glyphicon glyphicon-user"></span> Ty<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Edytuj", "Edit", "Account")</li>
                            <li>@Html.ActionLink("Zmień hasło", "ChangePassword", "Account")</li>
                            <li role="separator" class="divider"></li>
                            <li>
                                <a href="javascript:document.getElementById('logoutForm').submit()">
                                    <span class="glyphicon glyphicon-log-out"></span> Wyloguj się
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>  
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Zaloguj się", "Login", "Account")</li>
    </ul>
}
